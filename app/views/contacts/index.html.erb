<p id="notice"><%= notice %></p>

<div class="table-title-section">
  <h1 class="page-title">People in need</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Assigned</th>
      <th>Name</th>
      <th>No. of tasks</th>
      <th>Priority</th>
      <th>Date logged</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @contacts.each do |contact| %>
    <tr>
      <td></td>
      <td><%= contact.name %></td>
      <td><%= "#{contact.tasks_count} Tasks (#{contact.completed_tasks_count}x completed)" %></td>
      <td><%= contact.priority %></td>
      <td><%= format_datetime(contact.created_at) %></td>
      <td><%= link_to 'View', contact %></td>
      <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
    </tr>
  <% end%>
  </tbody>
</table>
