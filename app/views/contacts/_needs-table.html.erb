      <% if @open_needs.any? %>
        <table class="needs-table">
          <thead>
            <tr>
              <th>Type</th>
              <th>Priority</th>
              <th>Assigned</th>
              <th>Created</th>
              <th>Starts on</th>
            </tr>
          </thead>
          <tbody>
            <% @open_needs.each do |n| %>
              <tr onclick="window.location='<%= need_path(n) %>'">
                <td style="border-left: 10px solid <%= get_need_border(n.category) %>">
                  <%= link_to n.category.humanize, n %>
                </td>
                <td>
                  <% if n.is_urgent %>
                    <span class="urgent-tag">Urgent</span>
                  <% else %>
                    â€”
                  <% end %>
                </td>
                <td><%= n.assigned %></td>
                <td><%= n.created_at&.strftime("%-d %B %Y") %></td>
                <td>
                  <%= n.start_on&.strftime("%-d %B %Y") %>

                  <%# is this a 'future' need %>
                  <% if !n.start_on.nil? && n.start_on > DateTime.now %>
                     <span>(Future)</span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p class="no-results">No open needs recorded for this person</p>
      <% end %>
