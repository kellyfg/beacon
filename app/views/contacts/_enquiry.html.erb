<section class="accordion">

<div class="accordion__content">
  <dl class="details-list">
    <dt class="details-list__caption">Channel</dt>
    <dd class="details-list__value" id="channel">
      <%= @contact.channel %>
    </dd>

    <dt class="details-list__caption">Enquiry message</dt>
    <dd class="details-list__value" id="enquiry-details">
    <%= @contact.enquiry_message %>
    </dd>

    <dt class="details-list__caption">Is this a referral?</dt>
    <dd class="details-list__value" id="referral">
    <%= friendly_boolean @contact.enquiry_referral %>
    </dd>

  </dl>
</div>

</section>