<div class="with-left-sidebar">
<aside class="with-left-sidebar__left">
  <header class="panel-header">
    <h2 class="panel-header__title">Profile</h2>
    <% if policy(@contact).edit? %>
      <%= link_to "Edit", edit_contact_path(@contact), class: "contact-edit-link button button--dark", id:"edit-contact-link", remote: true %>
    <% end %>
  </header>

    <div id="contact-side-errors">
        <!-- space for errors -->
    </div>

  <div id="contact-side-container" class="panel panel--unpadded">
    <%= render "shared/profile-accordion" %>
  </div>
</aside>