<%= form_for(@note,:html=>{:id=>"update",:remote=>true}) do |form|%>
  <div class="field">
    <%= form.text_area :body, value: @note.body %>
  </div>  
  <div class="field">
    <%= link_to 'Cancel', note_path(@note), class: "button button--dark", id: "edit-need-cancel", remote: true %>
    <%= form.button 'Save', { type: 'submit', id: 'edit-need-save', class: 'button button--blue' } %>
  </div>
<% end %>