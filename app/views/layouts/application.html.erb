<!DOCTYPE html>
<html>
  <head>
    <title>IHaveINeed</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header class="site-header">
      <div class="site-header__inner container">
        <a href="/"><%= image_tag "logo.svg" %></a>
        <div class="site-header__inner_links">
          <a href="/users">Users</a>
        </div>
        <% if current_user %>
          <%= current_user.email %>
          (<%= link_to 'Logout', :destroy_user_session %>)
        <% else %>
          <%= link_to 'Login', 'auth/auth0', method: :post %>
        <% end %>
      </div>
    </header>

    <div class="main-content">
      <div class="container">
        <%= yield %>
      </div>
    </div>

    <footer class="site-footer">
      <div class="container">
        <p class="site-footer__notice">Â© 2020 Council name here</p>
        <nav class="site-footer__menu">
          <a class="site-footer__link" href="">Privacy & cookies</a>
          <a class="site-footer__link" href="">Give feedback on this service</a>
        </nav>
      </div>
    </footer>

  </body>
</html>
