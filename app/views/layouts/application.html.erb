<!DOCTYPE html>
<html lang="en">
  <%= render "shared/head"%>
  <body>

    <%= render "shared/side-nav" %>

    <div class="content-pane">

      <header class="panel content-header">
        <%= yield :header %>
        <nav class="content-header__actions-right">
          <span class="content-header__current-user"><%= current_user.email %></span>
          <%= link_to 'Log out', auth.sign_out_path, class: "button button--small" %>
        </nav>
      </header>
      
      <div id="concurrent-users-modal">
        <div id="concurrent-users"></div>
        <% if @edit_contact_id %>
          <div id="contactId" hidden="hidden"><%= @edit_contact_id %></div>
        <% end %>
        <div id="filterEmail" hidden="hidden"><%= current_user.email %></div>
      </div>

      <%# is there a better catchall for this? %>
      <% if flash[:notice] %>
        <div class="notice"><%= flash[:notice] %></div>
      <% else %>
        <% flash.each do |name, msg| %>
          <div class="alert"><%= msg %></div>
        <% end %>
      <% end %>

      <%= yield %>

    </div>

  </body>
</html>
