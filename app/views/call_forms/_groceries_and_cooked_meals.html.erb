<div class="field field--span-two-cols">
  <%= form.label :delivery_details, 'Delivery details' %>
  <%= form.text_area :delivery_details %>
</div>

<legend><h3 class="field-section__title">Do you have any dietary requirements?</h3></legend>
<div class="field field--span-two-cols">
  <div class="checkbox">
    <%= form.radio_button :any_dietary_requirements, true, { class: "checkbox__input" } %>
    <%= form.label 'any_dietary_requirements_true', 'Yes', class: "checkbox__label" %>
  </div>
  <div class="checkbox">
    <%= form.radio_button :any_dietary_requirements, false, { class: "checkbox__input" } %>
    <%= form.label 'any_dietary_requirements_false', 'No', class: "checkbox__label" %>
  </div>
</div>

<div class="field field--span-two-cols">
  <%= form.label :dietary_details, 'Dietary details', class: "checkbox__label" %>
  <%= form.text_area :dietary_details %>
</div>

<div class="field field--span-two-cols">
  <%= form.label :cooking_facilities, 'Cooking facilities', class: "checkbox__label" %>
  <%= form.text_area :cooking_facilities %>
</div>